{
  "version": 2,
  "rewrites": [
    { "source": "/api", "destination": "/api/index" },
    { "source": "/api/(.*)", "destination": "/api/index" },
    { "source": "/((?!api).*)", "destination": "/simple-frontend/$1" }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 60
    }
  }
}
