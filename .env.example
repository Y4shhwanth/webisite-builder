# ===========================================
# AI ENGINE CONFIGURATION
# ===========================================

# API Keys (Required - at least one)
OPENROUTER_API_KEY=your_openrouter_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model Fallback Chain (via OpenRouter):
# 1. anthropic/claude-sonnet-4
# 2. anthropic/claude-3.5-sonnet
# 3. google/gemini-2.0-flash-001
# 4. Direct Gemini API (if GEMINI_API_KEY set)

# Claude Model Selection
DEFAULT_CLAUDE_MODEL=claude-sonnet-4-20250514

# Feature Flags
USE_SDK_AGENTS=false

# Database (Railway/Render provide DATABASE_URL automatically)
DATABASE_URL=postgresql://user:password@host:5432/database

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379/0

# CORS - Comma-separated allowed origins
ALLOWED_ORIGINS=https://your-frontend.vercel.app,http://localhost:3000

# External Services
PLAYWRIGHT_SERVICE_URL=http://playwright:3001
TOPMATE_API_URL=https://api.topmate.io
GALACTUS_API_URL=https://gcp.galactus.run/fetchByUsername/

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ===========================================
# DJANGO BACKEND CONFIGURATION
# ===========================================

# Security
SECRET_KEY=your-super-secret-django-key-change-this
DEBUG=False
ALLOWED_HOSTS=your-backend.railway.app,localhost

# Database (same as above or separate)
# DATABASE_URL=postgresql://...
DB_NAME=ai_builder
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# CORS
FRONTEND_URL=https://your-frontend.vercel.app
CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,http://localhost:3000

# AI Engine URL (for Django to call AI Engine)
AI_ENGINE_URL=https://your-ai-engine.railway.app
