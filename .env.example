# AI Website Builder - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# ENVIRONMENT SETTINGS
# ============================================
# Set to "production" for production deployment
ENVIRONMENT=development
# Set to "true" only in development
DEBUG=false

# ============================================
# API Keys (REQUIRED - at least one AI key)
# ============================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Claude Model Selection
# ============================================
# Options: claude-opus-4-20250514 (best quality, slower)
#          claude-sonnet-4-20250514 (balanced, recommended)
#          claude-3-5-haiku-20241022 (fast, cheaper)
DEFAULT_CLAUDE_MODEL=claude-sonnet-4-20250514

# ============================================
# CORS Configuration (Production)
# ============================================
# Comma-separated list of allowed origins for CORS
# In production, set this to your frontend domain(s)
CORS_ORIGINS=https://your-frontend-domain.com,https://your-other-domain.com

# ============================================
# Redis Configuration
# ============================================
# For local development: redis://localhost:6379/0
# For production: Use your Redis provider URL
REDIS_URL=redis://localhost:6379/0

# ============================================
# Playwright Service URL
# ============================================
# For local development: http://localhost:3001
# For Docker: http://playwright:3001
# For production: URL of your Playwright service
PLAYWRIGHT_SERVICE_URL=http://localhost:3001

# ============================================
# Monitoring (Optional but recommended for production)
# ============================================
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# External APIs
# ============================================
TOPMATE_API_URL=https://api.topmate.io

# ============================================
# Browserbase (Cloud Browser for Visual Context)
# ============================================
BROWSERBASE_API_KEY=your_browserbase_api_key
BROWSERBASE_PROJECT_ID=your_browserbase_project_id
